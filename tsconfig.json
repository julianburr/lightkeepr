{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["es6"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "./node_modules",
    "./**/node_modules",
    "./packages/**/node_modules",
  ]
}